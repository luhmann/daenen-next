{
  "name": "daenen-next",
  "version": "1.0.0",
  "description": "The webpage of daenen4.de powered by next.js",
  "main": "index.js",
  "scripts": {
    "build": "next build",
    "dev": "next",
    "export": "next build && next export",
    "precommit": "lint-staged",
    "start": "next start",
    "test": "testcafe chrome tests/e2e",
    "test:ci": "testcafe nightmare tests/e2e --app 'http-server ./out -p 3000'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luhmann/daenen-next.git"
  },
  "keywords": [],
  "author": "Jan Florian Dietrich <jfd@daenen4.de> (http://www.daenen4.de/)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/luhmann/daenen-next/issues"
  },
  "homepage": "https://github.com/luhmann/daenen-next#readme",
  "dependencies": {
    "next": "^3.0.0-beta11",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "recompose": "^0.23.5"
  },
  "devDependencies": {
    "eslint-config-prettier": "^2.1.1",
    "eslint-config-xo-react": "^0.12.0",
    "eslint-plugin-prettier": "^2.1.1",
    "eslint-plugin-react": "^7.0.1",
    "eslint-plugin-testcafe": "^0.2.1",
    "http-server": "^0.10.0",
    "husky": "^0.13.4",
    "lint-staged": "^3.6.0",
    "munge": "^0.1.8",
    "prettier": "^1.4.4",
    "prop-types": "^15.5.10",
    "react-mailto": "^0.4.0",
    "short-hash": "^1.0.0",
    "testcafe": "^0.16.0",
    "testcafe-browser-provider-nightmare": "0.0.4",
    "xo": "^0.18.2"
  },
  "xo": {
    "extends": [
      "xo-react",
      "prettier",
      "prettier/react",
      "plugin:testcafe/recommended"
    ],
    "plugins": [
      "prettier",
      "testcafe"
    ],
    "rules": {
      "react/react-in-jsx-scope": 0,
      "prettier/prettier": [
        "error",
        {
          "trailingComma": "es5",
          "singleQuote": true,
          "semi": false
        }
      ]
    },
    "semicolon": false,
    "space": 2
  },
  "lint-staged": {
    "*.js": [
      "prettier --write --no-semi --single-quote --trailing-comma es5",
      "git add",
      "xo"
    ]
  }
}
